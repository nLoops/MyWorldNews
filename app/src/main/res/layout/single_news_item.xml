<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/singleItem_padding">

    <TextView
        android:id="@+id/txt_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/section_text_size"
        tools:text="category" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/txtColor"
        android:textSize="@dimen/title_text_size"
        tools:text="News Title"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_type"
            style="@style/text_view_style"
            android:textColor="@color/type_color"
            tools:text="description" />

        <TextView
            android:id="@+id/txt_date"
            style="@style/text_view_style"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_marginStart="@dimen/text_margin_left"
            android:textColor="@android:color/darker_gray"
            tools:text="date" />

    </LinearLayout>
</LinearLayout>